# ============================================================================
# Enterprise ERP System - Environment Configuration
# Copy this file to .env and update with your actual values
# ============================================================================

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NODE_ENV=development
APP_NAME=Enterprise ERP System
APP_VERSION=1.0.0

# ============================================================================
# SERVICE PORTS
# ============================================================================
API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
INVENTORY_SERVICE_PORT=3003
ORDER_SERVICE_PORT=3004
ANALYTICS_SERVICE_PORT=3005
FRONTEND_PORT=5173

# ============================================================================
# DATABASE - POSTGRESQL
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=erp_admin
POSTGRES_PASSWORD=erp_secure_password_123
POSTGRES_DB=erp_database

# PostgreSQL Connection Pool
POSTGRES_POOL_MIN=2
POSTGRES_POOL_MAX=20
POSTGRES_POOL_IDLE_TIMEOUT=10000

# PostgreSQL Connection String
DATABASE_URL=postgresql://erp_admin:erp_secure_password_123@localhost:5432/erp_database

# ============================================================================
# DATABASE - MONGODB
# ============================================================================
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=erp_admin
MONGODB_PASSWORD=erp_secure_password_123
MONGODB_DB=erp_audit

# MongoDB Connection String
MONGODB_URI=mongodb://erp_admin:erp_secure_password_123@localhost:27017/erp_audit?authSource=admin

# ============================================================================
# CACHE - REDIS
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=erp_secure_password_123
REDIS_DB=0

# Redis Connection String
REDIS_URL=redis://:erp_secure_password_123@localhost:6379/0

# Cache TTL (Time To Live) in seconds
CACHE_TTL_SHORT=300        # 5 minutes
CACHE_TTL_MEDIUM=1800      # 30 minutes
CACHE_TTL_LONG=3600        # 1 hour
CACHE_TTL_SESSION=86400    # 24 hours

# ============================================================================
# JWT & AUTHENTICATION
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars

# Token Expiry
JWT_ACCESS_EXPIRY=15m           # 15 minutes
JWT_REFRESH_EXPIRY=7d           # 7 days
JWT_RESET_PASSWORD_EXPIRY=1h    # 1 hour

# Session Settings
SESSION_SECRET=your-session-secret-key-change-this-in-production
SESSION_EXPIRY=86400000         # 24 hours in milliseconds

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true

# Bcrypt Salt Rounds
BCRYPT_SALT_ROUNDS=10

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=60000      # 1 minute
RATE_LIMIT_MAX_REQUESTS=100     # 100 requests per minute
RATE_LIMIT_SKIP_SUCCESSFUL=false

# Auth-specific rate limits
AUTH_RATE_LIMIT_WINDOW_MS=900000    # 15 minutes
AUTH_RATE_LIMIT_MAX_REQUESTS=5       # 5 login attempts

# ============================================================================
# CORS SETTINGS
# ============================================================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS

# ============================================================================
# FILE UPLOAD
# ============================================================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880              # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ============================================================================
# EMAIL CONFIGURATION (SendGrid)
# ============================================================================
EMAIL_ENABLED=false
EMAIL_FROM=noreply@enterpriseerp.com
EMAIL_FROM_NAME=Enterprise ERP System

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key-here

# SMTP (Alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================================================
# SMS CONFIGURATION (Twilio)
# ============================================================================
SMS_ENABLED=false
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# PAYMENT GATEWAY
# ============================================================================
PAYMENT_ENABLED=false

# Stripe
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox  # sandbox or live

# ============================================================================
# AWS CONFIGURATION
# ============================================================================
AWS_ENABLED=false
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# S3 Settings
AWS_S3_BUCKET=erp-uploads
AWS_S3_REGION=us-east-1

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=debug                    # error, warn, info, debug
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log
LOG_FILE_MAX_SIZE=10485760        # 10MB
LOG_FILE_MAX_FILES=7              # Keep 7 days of logs

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================
MONITORING_ENABLED=false

# New Relic (Optional)
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=Enterprise ERP System

# Google Analytics (Optional)
GA_TRACKING_ID=UA-XXXXXXXXX-X

# ============================================================================
# WEBSOCKET / REAL-TIME
# ============================================================================
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=3006
WEBSOCKET_PATH=/socket.io

# ============================================================================
# CRON JOBS / SCHEDULED TASKS
# ============================================================================
CRON_ENABLED=true

# Daily Reports
DAILY_REPORT_CRON=0 9 * * *        # 9 AM every day
WEEKLY_REPORT_CRON=0 9 * * 1       # 9 AM every Monday
MONTHLY_REPORT_CRON=0 9 1 * *      # 9 AM on 1st of month

# Cleanup Tasks
CLEANUP_SESSIONS_CRON=0 2 * * *    # 2 AM every day
CLEANUP_LOGS_CRON=0 3 * * 0        # 3 AM every Sunday

# ============================================================================
# MACHINE LEARNING / PREDICTIVE ANALYTICS
# ============================================================================
ML_SERVICE_ENABLED=false
ML_SERVICE_URL=http://localhost:5000
ML_API_KEY=your-ml-api-key

# ============================================================================
# SECURITY
# ============================================================================
ENABLE_HTTPS=false
SSL_KEY_PATH=./ssl/key.pem
SSL_CERT_PATH=./ssl/cert.pem

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true

# ============================================================================
# DEVELOPMENT / DEBUGGING
# ============================================================================
DEBUG_MODE=true
VERBOSE_LOGGING=true
ENABLE_SWAGGER=true
SWAGGER_PATH=/api-docs

# Mock Services (for testing)
MOCK_PAYMENT=false
MOCK_EMAIL=false
MOCK_SMS=false

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true
FEATURE_REPORTS=true
FEATURE_EXPORTS=true
FEATURE_WEBHOOKS=false

# ============================================================================
# API VERSIONING
# ============================================================================
API_VERSION=v1
API_BASE_PATH=/api/v1

# ============================================================================
# MICROSERVICES URLS (for inter-service communication)
# ============================================================================
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
INVENTORY_SERVICE_URL=http://localhost:3003
ORDER_SERVICE_URL=http://localhost:3004
ANALYTICS_SERVICE_URL=http://localhost:3005

# ============================================================================
# HEALTH CHECK
# ============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000        # 30 seconds

# ============================================================================
# TIMEZONE & LOCALIZATION
# ============================================================================
TIMEZONE=UTC
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de

# ============================================================================
# PAGINATION
# ============================================================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ============================================================================
# BACKUP & DISASTER RECOVERY
# ============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 1 * * *          # 1 AM every day
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# ============================================================================
# NOTES
# ============================================================================
# 1. Never commit .env file to version control
# 2. Always use .env.example as template
# 3. Update passwords and secrets in production
# 4. Use strong passwords (min 32 characters for secrets)
# 5. Enable SSL/HTTPS in production
# 6. Review and update rate limits based on your needs
# 7. Configure proper CORS origins for production
# ============================================================================